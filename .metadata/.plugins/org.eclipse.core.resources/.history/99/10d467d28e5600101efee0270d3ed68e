#define getMS() (xTaskGetTickCount() * (1000/configTICK_RATE_HZ))

void Task1(void* param);
void Task2(void* param);

TaskHandle_t task1_handle;
TaskHandle_t task2_handle;

QueueHandle_t q_task1_to_task2;
QueueHandle_t q_task2_to_task1;


typedef struct{
	uint8_t val1;
	uint8_t val2;
	char val3;
}msg_t;

