  /* USER CODE END RTOS_THREADS */

  /* USER CODE BEGIN RTOS_EVENTS */
  /* add events, ... */
  /* USER CODE END RTOS_EVENTS */
  xTaskCreate(Task1, "Task1", 512, NULL, 1, &task1_handle);
  xTaskCreate(Task2, "Task2", 512, NULL, 2, &task2_handle);

  q_task1_to_task2 = xQueueCreate(sizeof(msg_t), 5);
  q_task2_to_task1 = xQueueCreate(sizeof(msg_t), 5);

