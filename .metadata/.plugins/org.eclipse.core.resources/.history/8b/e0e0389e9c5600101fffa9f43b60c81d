/* USER CODE BEGIN 0 */
typedef struct{
	uint8_t val1;
	uint8_t val2;
	char val3;
}msg_type1_t;

typedef struct{
	uint8_t val1;
	float val2;
}msg_type2_t;

void Tx_Task1(void *param);
void Tx_Task2(void *param);
void Rx_Task(void *param);

TaskHandle_t tx1_task_handle;
TaskHandle_t tx2_task_handle;
TaskHandle_t rx_task_handle;

QueueHandle_t q_tx1_handle;
QueueHandle_t q_tx2_handle;
QueueSetHandle_t q_set_handle;

/* USER CODE END 0 */

